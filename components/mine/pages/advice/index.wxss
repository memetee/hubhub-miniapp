.advice-wrap {
  height: 100vh;
  padding: 0 40rpx;
  font-size: 30rpx;
  color: #7e7d7d;
  display: flex;
  flex-direction: column;
}

.advice-wrap .item-wrap {
    margin-top: 30rpx;
    font-size: 26rpx;
}
.item-wrap .input-telephone {
    display: block;
    margin-top: 60rpx;
    margin-top: 10rpx;
    background-color: #fff;
    padding: 16rpx;

}

.item-wrap .must-icon {
  color: red;
  font-weight: 900;
}

.advice-wrap .content .content-textarea{
  box-sizing: border-box;
  background: white;
  padding: 16rpx;
  width:100%;
  height: 460rpx;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.advice-wrap .tips {
  font-size: 24rpx;
  color: #a3a2a2;
}
.advice-wrap .tips .icon {
  vertical-align: middle;
  margin-right: 6rpx;
}


.advice-wrap .publish-btn {
    display: inline-block;
    text-align: center;
}