.mine-wrap {
  height: 100vh;
}

.header {
  display: inline-block;
  width: 100%;
  height: 180rpx;
  /* background: blue; */
  display: flex;
  align-items: center;
  background: url('https://pic2.zhimg.com/v2-e95c23e74994209b94628850ed2f8cda_r.jpg?source=1940ef5c') no-repeat center/100% 100%;
}

.header .avatar-wrap {
  width: 100rpx;
  height: 100rpx;
  margin-left: 80rpx;
  border-radius: 50%;
}

.header .avatar {
  width: 100rpx;
  height: 100rpx;
  background: #d84532;
  /* margin-left: 80rpx; */
  border-radius: 50%;
}

.header .name {
  margin-left: 40rpx;
}

.container {
  background-color: white;
  margin: 40rpx 30rpx 0rpx;
}

.container .mine-item {
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #666666;
  border-bottom: 1px solid #ecebeb;
}